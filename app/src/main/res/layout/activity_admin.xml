<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AdminActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="R A K    B U K U"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:fontFamily="serif"/>

    <!-- Divider -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/adminTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome, Admin!"
        android:textSize="18sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/adminTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:gravity="center" />

    <!-- Manage Books Button -->
    <Button
        android:id="@+id/btnManageBooks"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Manage Books"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4A0D00"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Manage Users Button -->
    <Button
        android:id="@+id/btnManageUsers"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Manage Users"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4A0D00"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageBooks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pinjam Buku Button -->
    <Button
        android:id="@+id/btnPinjamBuku"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Pinjam Buku"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4A0D00"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Kemabalikan Buku Button -->
    <Button
        android:id="@+id/btnKembalikanBuku"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Kembalikan Buku"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4A0D00"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnPinjamBuku"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:backgroundTint="#B00020"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnKembalikanBuku"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
